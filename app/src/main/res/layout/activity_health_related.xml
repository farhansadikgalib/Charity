<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    tools:context=".Dashboard_Items.HealthRelatedActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_top"
                android:layout_height="80dp"
                android:layout_width="match_parent"
                android:minHeight="?attr/actionBarSize"
                android:background="@drawable/helthe">

                <Button
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:background="@drawable/ic_vector"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="স্বাস্থ্য সংক্রান্ত"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:id="@+id/toolbar_title" />
            </androidx.appcompat.widget.Toolbar>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="আবেদনের পরিসংখ্যান"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:textColor="#26A9E1"
                android:id="@+id/educationId" />
            <com.github.mikephil.charting.charts.PieChart

                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_margin="10dp"
                android:id="@+id/piechart"
                android:layout_width="match_parent"
                android:layout_height="200dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/Recent_applicationId"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                card_view:cardCornerRadius="6dp"
                android:background="#FFFFFF"
                android:padding="10dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="5"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_icon_3"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_weight="4.5"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/textViewName1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:textSize="22sp"
                            android:layout_margin="7dp"
                            android:textStyle="bold"
                            android:textColor="#515151"
                            android:text="সাম্প্রতিক আবেদন"
                            />

                        <TextView
                            android:id="@+id/textViewVersion1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="১,৫২৮"
                            android:layout_gravity="center_horizontal"
                            android:textColor="#26A9E1"
                            android:textAlignment="textEnd"
                            android:textSize="20sp"
                            android:layout_marginRight="20dp"
                            tools:ignore="RtlCompat" />
                    </LinearLayout>



                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Approved_application"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                card_view:cardCornerRadius="6dp"
                android:background="#FFFFFF"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="5"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_icon_4"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_weight="4.5"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/textViewName2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:layout_margin="7dp"
                            android:textColor="#515151"
                            android:text="অনুমোদিত আবেদন"
                            />

                        <TextView
                            android:id="@+id/textViewVersion2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="২১,২৫৬"
                            android:layout_gravity="center_horizontal"
                            android:textColor="#26A9E1"
                            android:textAlignment="textEnd"
                            android:textSize="20sp"
                            android:layout_marginRight="20dp"
                            tools:ignore="RtlCompat" />
                    </LinearLayout>



                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Application_under_consideration"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                card_view:cardCornerRadius="6dp"

                android:background="#FFFFFF"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="5"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_icon_2"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_weight="4.5"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/textViewName3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:layout_margin="7dp"
                            android:textColor="#515151"
                            android:text="বিবেচনাধীন আবেদন"
                            />

                        <TextView
                            android:id="@+id/textViewVersion3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="৮৫১"
                            android:layout_gravity="center_horizontal"
                            android:textColor="#26A9E1"
                            android:textAlignment="textEnd"
                            android:textSize="20sp"
                            android:layout_marginRight="20dp"
                            tools:ignore="RtlCompat" />
                    </LinearLayout>



                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Unapproved_application"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                card_view:cardCornerRadius="6dp"
                android:background="#FFFFFF"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="5"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_weight=".5"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_icon_1"
                        android:layout_width="0dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_weight="4.5"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/textViewName4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="#515151"
                            android:layout_margin="7dp"
                            android:text="অননুমদিত আবেদন"
                            />

                        <TextView
                            android:id="@+id/textViewVersion4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="২৫"
                            android:layout_gravity="center_horizontal"
                            android:textColor="#26A9E1"
                            android:textAlignment="textEnd"
                            android:textSize="20sp"
                            android:layout_marginRight="20dp"
                            tools:ignore="RtlCompat" />
                    </LinearLayout>



                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Resubmit_application"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                card_view:cardCornerRadius="6dp"
                android:background="#FFFFFF"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="5"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_icon_5"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_weight="4.5"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/textViewName5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:layout_margin="7dp"
                            android:textColor="#515151"
                            android:text="পুনরায় জমা আবেদন"
                            />

                        <TextView
                            android:id="@+id/textViewVersion5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="৫"
                            android:layout_gravity="center_horizontal"
                            android:textColor="#26A9E1"
                            android:textAlignment="textEnd"
                            android:textSize="20sp"
                            android:layout_marginRight="20dp"
                            tools:ignore="RtlCompat" />
                    </LinearLayout>



                </LinearLayout>

            </androidx.cardview.widget.CardView>



        </LinearLayout>

    </LinearLayout>

</ScrollView>
